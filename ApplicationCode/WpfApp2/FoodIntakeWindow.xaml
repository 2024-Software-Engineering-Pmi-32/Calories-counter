<Window x:Class="CaloriesCounter.FoodIntakeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати їжу" Height="350" Width="400"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Border Background="White" Padding="20" CornerRadius="10" 
                BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                <Button Content="Назад" Click="Back_Click" Width="114" Height="25" 
                        Background="#B0BEC5" Foreground="White" FontWeight="Bold" 
                        BorderBrush="#90A4AE" BorderThickness="1" 
                        HorizontalAlignment="Left" />
                <TextBlock FontSize="24" FontWeight="Bold" Text="Додати їжу" 
                           Margin="0,20,0,20" HorizontalAlignment="Center" />
                <TextBlock Text="Виберіть продукт:" FontSize="16" Margin="0,0,0,10"/>
                <ComboBox x:Name="FoodItemsComboBox" Width="300" Height="30" Margin="0,0,0,20" />
                <Button Content="Додати" Click="AddFoodButton_Click" Width="100" Height="35" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
