<Window x:Class="CaloriesCounter.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Зміна паролю" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Старий пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Новий пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Підтвердження нового паролю:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            <Button Content="Змінити пароль" Click="Confirm_Click" Width="100" Margin="0,10,0,0"/>
            <Button Content="Назад" Click="Back_Click" Width="100" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
